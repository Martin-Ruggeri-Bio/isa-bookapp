<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Post.
    -->
    <changeSet id="20221015152646-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="author_id"
                                 baseTableName="post"
                                 constraintName="fk_post__author_id"
                                 referencedColumnNames="id"
                                 referencedTableName="profile"/>

        <addForeignKeyConstraint baseColumnNames="post_id"
                                 baseTableName="rel_post__tag"
                                 constraintName="fk_rel_post__tag__post_id"
                                 referencedColumnNames="id"
                                 referencedTableName="post"/>

        <addForeignKeyConstraint baseColumnNames="tag_id"
                                 baseTableName="rel_post__tag"
                                 constraintName="fk_rel_post__tag__tag_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>

        <addForeignKeyConstraint baseColumnNames="post_id"
                                 baseTableName="rel_post__like"
                                 constraintName="fk_rel_post__like__post_id"
                                 referencedColumnNames="id"
                                 referencedTableName="post"/>

        <addForeignKeyConstraint baseColumnNames="like_id"
                                 baseTableName="rel_post__like"
                                 constraintName="fk_rel_post__like__like_id"
                                 referencedColumnNames="id"
                                 referencedTableName="profile"/>
    </changeSet>
</databaseChangeLog>
